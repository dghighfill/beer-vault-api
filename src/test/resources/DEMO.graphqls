query getDistributionCenters {
    distributionCenters {
        id
        name
        addressLine1
        addressLine2
        city
        state
        zip
    }
}

query getAllBreweries {
    breweries {
        name
        addressLine1
        addressLine2
        city
        state
        zip
    }
}

query getAllBeers {
    beers {
        id
        name
        rating
    }
}

query getAllBeersCondensed {
    beers {
        name
    }
}

query filterBeersById {
    beerById(id: 10) {
        id
        name
    }
}

query aliasBeers {
    firstFavorite: beerById(id: 1) {
        name
        rating
    }
    secondFavorite: beerById(id: 3) {
        name
        rating
    }
}

query filterByRange {
    beers(first: 3) {
        id
        name
        rating
    }
}

query filterByRangeAdvanced {
    beers(first: 2, last: 3) {
        id
        name
    }
}

query getBearById {
    beerById(id: 3) {
        id
        name
    }
}

mutation createBeer {
    createBeer(name: "the cool one", rating: 5, image: "") {
        id
    }
}

query getCreatedBear {
    beerById(id: 11) {
        id
        name
    }
}

mutation deleteBeer {
    deleteBeer(id: 11) {
        id
    }
}

query countBeers {
    countBeers
}

query getBreweryById {
    breweryById(id: 1) {
        name
        addressLine1
        city
        state
        zip
    }
}

# First get by 2, then by 1
query getBrewersBeers {
    breweryById(id: 2) {
        name
        addressLine1
        city
        state
        zip
        beers {
            name
        }
    }
}

query getBeersBrewer {
    beers {
        name
        brewery {
            name
        }
    }
}

query kitchenSink {
    distributionCenters {
        name
    }
    breweries {
        name
    }
    beers {
        name
    }
}
